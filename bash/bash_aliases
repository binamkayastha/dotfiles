alias mountWPI='sudo mount -t cifs //storage.wpi.edu/home ~/mnt/home -o username=bkayastha,uid=binam,gid=binam'
alias wifichk='ps aux | grep wpa && ps aux | grep dhc'
alias netstart='systemctl enable NetworkManager && systemctl start NetworkManager'
alias netkill='systemctl stop NetworkManager && systemctl disable NetworkManager'

