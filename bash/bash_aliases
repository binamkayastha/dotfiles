# Networks
alias wifi='sudo wpa_supplicant -c ~/.config/CA/wpi_wireless.conf -i wlp3s0'
alias wifie='sudo wpa_supplicant -c ~/.config/CA/wpi_wireless_eduroam.conf -i wlp3s0 -D nl80211'
alias dwifi='sudo dhcpcd wlp3s0'
alias wifikill='sudo killall wpa_supplicant dhcpcd'
