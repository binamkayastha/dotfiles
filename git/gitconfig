[user]
    name = binamkayastha
    email = binamkayastha@gmail.com
[core]
    autocrlf = input
    pager = less
[alias]
    br = branch
    ci = commit
    co = checkout
    df = diff
    dfc = diff --cached
    dfs = diff --staged
    lg = log --patch --find-renames --find-copies
    lgf = log --stat --find-renames --find-copies
    lgs = log --format=oneline --abbrev-commit
    lol = log --graph --decorate --format=oneline --abbrev-commit
    lolh = !git --no-pager lol -30
    lola = log --graph --decorate --format=oneline --abbrev-commit --all
    lolah = !git --no-pager lola -20
    ls = ls-files
    st = status
    undo = reset HEAD~
